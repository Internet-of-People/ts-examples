{
  "compilerOptions": {
    "target": "es6",
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "types": ["node"],
    "lib": ["es5", "scripthost", "es2015.collection", "es2015.promise", "es2015.iterable", "dom"],
    "outDir": "lib",
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"]
}